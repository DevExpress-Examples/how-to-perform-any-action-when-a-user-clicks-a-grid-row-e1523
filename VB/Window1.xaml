<Window x:Class="RowsHitTest.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    Title="Window1" Height="300" Width="554">
    <DockPanel>
        <TextBox Name="eventLog" IsReadOnly="True" 
                 DockPanel.Dock="Right" Width="300"
                 ScrollViewer.VerticalScrollBarVisibility="Visible" />
        <dxg:GridControl x:Name="grid" AutoPopulateColumns="True">
            <dxg:GridControl.View>
                <dxg:TableView Name="view" AllowEditing="False" />
            </dxg:GridControl.View>
        </dxg:GridControl>
    </DockPanel>
</Window>
